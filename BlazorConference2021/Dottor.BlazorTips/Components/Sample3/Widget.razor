@typeparam T

<div class="card bg-light m-2">
    <div class="card-header">
        @Title
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><img src="@GetImagePath()" /></li>
        <li class="list-group-item"><strong>@Value</strong></li>
        <li class="list-group-item">@Value.GetType().Name</li>
    </ul>
</div>

@code {

    [Parameter] public string Title { get; set; }
    [Parameter] public T Value { get; set; }

    private string GetImagePath()
    {
        return Value switch
        {
            long or int or short => "/images/numbers.png",
            DateTime or DateTimeOffset => "/images/calendar.png",
            string or char => "/images/letters.png",
            _ => "/images/question_mark.png",
        };
    }

}
